#ifndef ATOMZEIT_H
#define ATOMZEIT_H



class atomzeit {
 public:
  atomzeit();
  ~atomzeit(void);
  void printTime(unsigned long secsSince2000);
  char *getDate(unsigned long secsSince2000, char *strbuf);
  char *getYear(unsigned long secsSince2000, char *strbuf);
  char *getTime(unsigned long secsSince2000, char *strbuf);
  int getAtomzeitFromWeb();

 private:
  unsigned long midnight_ms; // ms counter at midnight of current day
  int sunrise;
  int sunset;
  
 };

#endif /* ATOMZEIT_H */
